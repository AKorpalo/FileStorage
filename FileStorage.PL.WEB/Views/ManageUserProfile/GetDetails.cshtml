@using App_LocalResources
@model FileStorage.PL.WEB.Models.UserViewModel

@{
    ViewBag.Title = Resource.Details;
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
<link href="~/Content/MyUserDetails.css" rel="stylesheet">
<script>
    $(function() {
        $('#profile-image1').on('click', function() {
            $('#profile-image-upload').click();
        });
    });       
</script> 

<div class="container">
        <div class="row">
            <div class="col-md-7 ">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="box box-info">
                            <div class="box-body">
                                <div class="col-sm-6">
                                    <div align="center">
                                        <img alt="User Pic" src="https://x1.xingassets.com/assets/frontend_minified/img/users/nobody_m.original.jpg" id="profile-image1" class="img-circle img-responsive">
                                        <input id="profile-image-upload" class="hidden" type="file">
                                        @*<div style="color:#999;">click here to change profile image</div>*@
                                    </div>
                                    <br>
                                </div>
                                <div class="col-sm-6">
                                    <h4 style="color:#00b1b1;">@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.SecondName) </h4></span>
                                </div>
                                <div class="clearfix"></div>
                                <hr style="margin:5px 0 5px 0;">

                                <div class="col-sm-5 col-xs-6 tital ">@Html.DisplayNameFor(model => model.Email)</div><div class="col-sm-7">@Html.DisplayFor(model => model.Email)</div>
                                <div class="clearfix"></div>
                                <div class="bot-border"></div>

                                <div class="col-sm-5 col-xs-6 tital ">@Html.DisplayNameFor(model => model.UserName)</div><div class="col-sm-7">@Html.DisplayFor(model => model.UserName)</div>
                                <div class="clearfix"></div>
                                <div class="bot-border"></div>

                                <div class="col-sm-5 col-xs-6 tital ">@Html.DisplayNameFor(model => model.FirstName)</div><div class="col-sm-7 col-xs-6 ">@Html.DisplayFor(model => model.FirstName)</div>
                                <div class="clearfix"></div>
                                <div class="bot-border"></div>
                                <div class="col-sm-5 col-xs-6 tital ">@Html.DisplayNameFor(model => model.SecondName)</div><div class="col-sm-7"> @Html.DisplayFor(model => model.SecondName)</div>
                                <div class="clearfix"></div>
                                <div class="bot-border"></div>
                                <div class="col-sm-5 col-xs-6 tital ">@Html.DisplayNameFor(model => model.BirthDate)</div><div class="col-sm-7">@Html.DisplayFor(model => model.BirthDate)</div>
                                <div class="clearfix"></div>
                                <div class="bot-border"></div>
                                <div class="col-sm-5 col-xs-6 tital ">@Html.DisplayNameFor(model => model.CurrentSize)</div><div class="col-sm-7">@Html.DisplayFor(model => model.CurrentSize)</div>
                                <div class="clearfix"></div>
                                <div class="bot-border"></div>
                                <div class="col-sm-5 col-xs-6 tital ">@Html.DisplayNameFor(model => model.MaxSize)</div><div class="col-sm-7">@Html.DisplayFor(model => model.MaxSize)</div>
                                <div class="clearfix"></div>
                                <div class="bot-border"></div>
                            </div>
                            <p>
                                <a onclick="window.location.href='/ManageUserProfile/Edit/@Model.Id'" class="btn btn-primary a-btn-slide-text ">
                                    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                                    <span><strong>@Resource.Edit</strong></span>            
                                </a>

                                <a href="/ManageUserProfile/_Delete/@Model.Id" class="btn btn-primary a-btn-slide-text viewDialog" data_dialog_title="@Resource.Delete">
                                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                    <span ><strong>@Resource.Delete</strong></span>            
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
